keywords = {Corals,Genotype,Multilocus DNA fingerprinting,Plexaura kuna,Stability,Symbiosis,Zooxanthellae},
pages = {117--124},
pmid = {1714},
title = {{Stability of an octocoral-algal symbiosis over time and space}},
