journal = {PLoS ONE},
keywords = {Animals,Anthozoa,Anthozoa: classification,Anthozoa: genetics,Base Sequence,Biodiversity,DNA Primers,Ecology,Evolution,Genotype,Molecular,Photosystem II Protein Complex,Photosystem II Protein Complex: genetics,Phylogeny},
