isbn = {1785864211},
journal = {Coral Health and {\ldots}},
pages = {427--444},
title = {{The adaptive hypothesis of bleaching}},
url = {http://link.springer.com/chapter/10.1007/978-3-662-06414-6{\_}24},
year = {2004}
}
