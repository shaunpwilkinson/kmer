journal = {BMC Evolutionary Biology},
keywords = {Ambystoma,Ambystoma: classification,Ambystoma: genetics,Animals,Biological Evolution,Gene Flow,Gene Frequency,Genetic,Genetic Markers,Genetic Speciation,Heterozygote,Hybridization,Likelihood Functions},
month = {jan},
pages = {131},
pmid = {22849298},
