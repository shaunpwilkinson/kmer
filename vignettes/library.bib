keywords = {Adaptation,Animals,Asexual,Diploidy,Female,Humans,Male,Mutation,Physiological,Reproduction,Sex,Sex Determination Analysis,Sex Ratio},
month = {jan},
number = {3},
pages = {205--213},
pmid = {8062455},
title = {{Advantages of sexual reproduction}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/8062455},
volume = {15},
year = {1994}
}
@article{LaJeunesse2011,
