author = {Cs{\'{a}}sz{\'{a}}r, N. B M and Seneca, F. O. and {Van Oppen}, M. J H},
doi = {10.3354/meps08194},
file = {:home/shaun/Vboxshared/Papers/Cs{\'{a}}sz{\'{a}}r et al 2009-variation in gene expression in Acropora millepora.pdf:pdf},
isbn = {0171-8630},
issn = {01718630},
journal = {Marine Ecology Progress Series},
keywords = {Acropora millepora,Coral bleaching,Gene expression,Magnetic beads,Oxidative stress,Real-time pcr,Variation},
pages = {93--102},
