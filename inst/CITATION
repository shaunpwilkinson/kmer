citHeader("To cite kmer in publications use:")

bibentry(entry = "Manual",
   title = "kmer: an R package for fast alignment-free clustering of biological sequences",
   author = c("Shaun Wilkinson"),
   url = "https://cran.r-project.org/package=kmer",
   year   = "2018",
   doi = "10.5281/zenodo.1227690",
   textVersion =
   paste("Wilkinson SP (2018) kmer: an R package for fast alignment-free clustering
         of biological sequences. R package version 1.0.0.",
         "https://cran.r-project.org/package=kmer")
)
